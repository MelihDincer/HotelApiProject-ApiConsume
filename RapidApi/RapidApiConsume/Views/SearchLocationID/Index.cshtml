@model List<BookingApiLocationSearchViewModel>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /> 
    <h2 style="text-align:center">Şehir ID Değeri Bulma Motoru</h2>
    <br />
    <form method="post" asp-action="Index" asp-controller="SearchLocationID">
        <label>Şehir Adını Giriniz</label>
        <input type="text" name="cityName" class="form-control" />
        <br />
        <button class="btn btn-sm btn-warning">Şehir İçin ID Bul</button>
    </form>
    <table class="table table-bordered">
        <tr>
            <th>Lokasyon</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.dest_id</td>
            </tr>
        }
    </table>
    <br />
    <a href="/BookingByCity/Index/" class="btn btn-dark">Yeni Otel Rezervasyon Bilgisi</a>
</div>